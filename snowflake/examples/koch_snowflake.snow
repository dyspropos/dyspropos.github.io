system test using svg {

  parm size: float {
    default: 200.0
  }

  parm limit: float {
    default: 5.0
  }

  parm angle: float {
    default: 60.0
  }

  start {
    forward(size)
    turn(240.0)
    forward(size)
    turn(240.0)
    forward(size)
    path( style(1.0, #000000, #ffffff), identity_pose() )
  }

  rule forward if length > limit {
    let d = length / 3.0
    forward(d)
    turn(angle)
    forward(d)
    turn(-(2 * angle))
    forward(d)
    turn(angle)
    forward(d)
  }

}